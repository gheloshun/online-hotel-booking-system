<div class="row">
  <% @rooms.each do |room| %>
    <div class="col s4">
      <div class="card">
        <div class="card-image">
          <% image = room.images.first %>
          <%= image_tag image %>
        </div>
        <div class="card-content">
          <h6><%= room.room_number %></h6>
          <p></p>
        </div>
        <div class="card-action">
          <%= link_to "Book", room, :class => "waves-effect waves-light btn red" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
