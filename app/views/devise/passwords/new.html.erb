<br>
<h5 class="center">Forgot your password?</h5>
<br>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="row center">
    <div class="col l3">
    </div>
    <div class="col l6">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <div class="col l3">
    </div>
  </div>
  <div class="actions center">
    <%= f.submit "Send me reset password instructions", class: "waves-effect waves-light btn red" %>
  </div>
<% end %>
<br>
<div class="center">
  You remember your password now? <%= link_to "Log in", new_session_path(resource_name) %> now your account!<br>
  You want to be a member? <%= link_to "Sign up", new_registration_path(resource_name) %><br /> now!
</div>
<br>
